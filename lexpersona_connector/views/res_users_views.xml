<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_users_form_lexpersona" model="ir.ui.view">
        <field name="name">res.users.form.inherit.lexpersona</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <group name="messaging" position="after">
                <group name="lexpersona">
                    <group colspan="4">
                        <field name="lexpersona_token" />
                        <field name="lexpersona_ref" />
                    </group>
                </group>
            </group>
        </field>
    </record>
    <record id="view_users_form_simple_modif_lexpersona" model="ir.ui.view">
        <field name="name">view.users.form.simple.modif.inherit.lexpersona</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif" />
        <field name="arch" type="xml">
            <group name="signature" position="after">
                <group name="lexpersona">
                    <group colspan="4">
                        <field name="lexpersona_token" />
                        <field name="lexpersona_ref" />
                    </group>
                </group>
            </group>
        </field>
    </record>
</odoo>
